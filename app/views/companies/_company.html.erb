<tr id="<%= company.id%>">
  <td><%= company.name %></td>
  <td><%= link_to 'Ver empresa', company_path(company.id), data: {remote: true}, class:'btn btn-primary btn-sm' %></td>
  <td><%= link_to 'Editar', edit_company_path(company.id), data: {remote: true}, class:'btn btn-success btn-sm' %></td>
  <td><%= link_to 'Eliminar', company_path(company.id), data: {method: :delete, remote: true}, class:'btn btn-danger btn-sm' %></td>
</tr>